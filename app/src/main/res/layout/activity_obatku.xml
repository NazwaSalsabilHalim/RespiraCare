<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_light">

    <!-- Curve Background -->
    <LinearLayout
        android:id="@+id/containerCard"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_login_curve"
        android:paddingTop="100dp"
        android:paddingBottom="109dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_detail_obat"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"/>

            <!-- Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Isi detail nama obat, dosis, frekuensi, dan jadwal minum obat untuk membantu mengingatkan kamu tepat waktu."
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"/>

            <!-- CARD BESAR -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_input"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp">

                <!-- ITEM: Nama Obat -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/bg_button_blue_primary">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/drugs"
                        android:contentDescription="@null" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:hint="Nama Obat"
                        android:background="@null"
                        android:paddingStart="12dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"/>
                </LinearLayout>

                <!-- ITEM: Dosis -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/bg_button_blue_primary">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/dropper"
                        android:contentDescription="@null" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:hint="Dosis"
                        android:background="@null"
                        android:paddingStart="12dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"/>
                </LinearLayout>

                <!-- ITEM: Frekuensi -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/bg_button_blue_primary">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/heartbeat"
                        android:contentDescription="@null" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:hint="Frekuensi"
                        android:background="@null"
                        android:paddingStart="12dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"/>
                </LinearLayout>

                <!-- ITEM: Waktu Minum -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/bg_button_blue_primary">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/medicine"
                        android:contentDescription="@null" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:hint="Waktu Minum"
                        android:background="@null"
                        android:paddingStart="12dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"/>
                </LinearLayout>

                <!-- ITEM: Gejala -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:background="@drawable/bg_button_blue_primary">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/coronavirus"
                        android:contentDescription="@null" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:hint="Gejala"
                        android:background="@null"
                        android:paddingStart="12dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Button -->
            <LinearLayout
                android:id="@+id/btnLanjutkan"
                android:layout_width="180dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/bg_button_blue"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lanjutkan"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/arrow" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>