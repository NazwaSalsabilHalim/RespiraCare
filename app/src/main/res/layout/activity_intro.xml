<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_light">

    <!-- ===================== -->
    <!-- CONTAINER CURVE CARD -->
    <!-- ===================== -->
    <LinearLayout
        android:id="@+id/containerCard"
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_login_curve"
        android:paddingTop="55dp"
        android:paddingBottom="90dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ===================== -->
        <!-- TITLE SECTION -->
        <!-- ===================== -->
        <LinearLayout
            android:id="@+id/titleSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="30dp">

            <TextView
                android:id="@+id/tvIntroTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prediksi Treatment"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tvIntroDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aplikasi ini membantu memprediksi treatment berdasarkan gejala dan kondisi pernapasan kamu."
                android:textSize="13sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="12dp"
                android:maxWidth="320dp"/>
        </LinearLayout>

        <!-- ===================== -->
        <!-- CARD INTRO -->
        <!-- ===================== -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardIntro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="12dp"
            android:layout_marginBottom="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center"
                android:background="@drawable/bg_input">

                <ImageView
                    android:id="@+id/imgIntro"
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/respiracare"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Penyakit Saluran Pernapasan"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_dark"
                    android:layout_marginTop="16dp"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dapatkan rekomendasi treatment berdasarkan kondisi kamu"
                    android:textSize="13sp"
                    android:textColor="@color/primary_dark"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:maxWidth="280dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:id="@+id/btnStart"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/bg_button_blue">

            <TextView
                android:text="Mulai Prediksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>