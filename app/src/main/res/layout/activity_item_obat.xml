<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="12dp"
    android:paddingVertical="6dp">

    <!-- CARD -->
    <LinearLayout
        android:id="@+id/cardReminder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_button_blue_primary"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- TEXT AREA -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNamaObat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paracetamol"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtDosis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2x sehari"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/txtWaktu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08:00 â€¢ 20:00"
                android:textColor="@color/white"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- SWITCH -->
        <Switch
            android:id="@+id/switchAktif"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:checked="true"
            android:thumbTint="@color/blue_dark"
            android:trackTint="@color/primary_dark"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>